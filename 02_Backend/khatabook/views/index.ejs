<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khaatabook - Home</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>Khaatabook</h1>
            <nav>
                <a href="/">Home</a>
                <a href="/create">Create New Hisaab</a>
            </nav>
        </header>

        <main>
            <h2>All Hisaab Kitaab</h2>
            <div class="hisaab-list">
                <% if (files.length > 0) { %>
                    <% files.forEach(function(filename) { %>
                        <div class="hisaab-list-item">
                            <a href="/hisaab/<%= filename %>" style="color: white; text-decoration: none;"><%= filename %></a>
                            <div class="actions">
                                <a href="/edit/<%= filename %>">✏️</a>
                                <a href="/delete/<%= filename %>">🗑️</a>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No hisaabs created yet. <a href="/create">Create one now!</a></p>
                <% } %>
            </div>
        </main>
    </div>
</body>
</html>
